{
  "manifest_version": 3,
  "name": "CipherGuard",
  "version": "1.0",
  "description": "Blur offensive images and remove offensive text for safe browsing",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "urlMonitoring.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "incognito": "spanning"

}
